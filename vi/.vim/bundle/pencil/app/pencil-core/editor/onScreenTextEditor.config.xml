<?xml version="1.0"?>
<p:Config xmlns="http://www.w3.org/1999/xhtml"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:svg="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          xmlns:p="http://www.evolus.vn/Namespace/Pencil">
    <div class="OnScreenTextEditor" p:mode="Single" top="0" left="0">
            <style type="text/css"><![CDATA[
                @namespace p url(http://www.evolus.vn/Namespace/Pencil);
                @namespace xul url(http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul);

                div.OnScreenTextEditor {
                    background: rgba(255, 0, 0, .2);
                }
                div.OnScreenTextEditor input[p|name='TextEditor'] {
                    -moz-appearance: none;
                    -moz-box-sizing: border-box;
                    border: dotted 1px #000;
                    background-color: #fff;
                    color: #000;
                    padding: 0px !important;
                    line-height: 1.2em !important;
                }
                div.OnScreenTextEditor textarea[p|name='MultiLineTextEditor'] {
                    -moz-appearance: none;
                    -moz-box-sizing: border-box;
                    border: dotted 1px #000;
                    background-color: #fff;
                    color: #000;
                    padding: 0px !important;
                    line-height: 1.2em !important;
                    width: 100%;
                    height: 100%;
                }
                div.OnScreenTextEditor[p|mode='Single'] textarea[p|name='MultiLineTextEditor'] {
                    display: none;
                }
                div.OnScreenTextEditor[p|mode='Multi'] input[p|name='TextEditor'] {
                    display: none;
                }
            ]]></style>
        <input xmlns="http://www.w3.org/1999/xhtml" p:name="TextEditor"/>
        <textarea xmlns="http://www.w3.org/1999/xhtml" p:name="MultiLineTextEditor"/>
    </div>
</p:Config>
